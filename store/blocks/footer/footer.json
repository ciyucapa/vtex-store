{
  "footer": {
    "blocks": [
      "footer-layout.desktop", 
      "footer-layout.mobile"
    ]
  },
  "footer-layout.desktop": {
    "children": [
      "image#footer",
      "flex-layout.row#footer-1-desktop",
      "flex-layout.row#footer-4-desktop",
      "flex-layout.row#footer-5-desktop",
      "flex-layout.row#footer-3-desktop",
      "flex-layout.row#footer-2-desktop"
    ]
  },
  "image#footer": {
    "props": {
      "src": "https://sugoco.vtexassets.com/arquivos/curva_footer.svg",
      "blockClass":"image-curva"
    }
  },
  "flex-layout.row#footer-1-desktop": {
    "children": ["flex-layout.col#footer-one"],
    "props": {
      "blockClass": "new"
    }
  },
  "flex-layout.col#footer-one": {
    "children":[
      "image#logo",
      "rich-text#footer-logo"
    ]
  },
  "image#logo": {
    "props": {
      "src": "https://sugoco.vtexassets.com/assets/vtex/assets-builder/sugoco.sugoco-theme/4.0.3/globals/main-footer-logo___b10be364fdd8f3c9ab32da3cc6ca61f2.svg",
      "maxWidth": "100px",
      "maxHeight": "100px"
    }
  },
  "rich-text#footer-logo": {
    "props":{
      "text":"La primera tienda sostenible donde ahorrando, \ntambién ayudas al planeta.",
      "blockClass": "logo-footer"
    }
  },
  "flex-layout.row#footer-4-desktop": {
    "children": ["rich-text#modelo"],
    "props": {
      "blockClass": "rich-modelo"
    }
  },
  "rich-text#modelo": {
    "props": {
      "text": "Conoce nuestro modelo sostenible haciendo click aquí",
      "blockClass": "modelo"
    }
  },
  "flex-layout.row#footer-5-desktop": {
    "children": ["rich-text#somos", "rich-text#somos", "image#industria"],
    "props": {
      "blockClass": "rich-modelo"
    }
  },
  "rich-text#somos": {
    "props": {
      "text": "Somos trasnparentes"
    }
  },
  "image#industria": {
    "props": {
      "src": "https://sugoco.vtexassets.com/arquivos/superintendencia.png"
    }
  },
    "flex-layout.row#footer-2-desktop": {
    "children": ["flex-layout.col#footer-two"],
    "props": {
      "blockClass": "payment-methods"
    }
  },
  "flex-layout.col#footer-two":{
    "children":["rich-text#pago", "accepted-payment-methods"]
  },
  "rich-text#pago":{
    "props":{
      "text":"Realiza tu pago de forma segura"
    }
  },
  "accepted-payment-methods": {
    "props": {
      "paymentMethods": ["MasterCard", "Visa", "Diners Club"]
    }
  },

  "flex-layout.row#footer-3-desktop": {
    "children": ["rich-text#footer"],
    "props": {
      "blockClass": "credits"
    }
  },
  "rich-text#footer": {
    "props": {
      "text": "EN BLANCO",
      "blockClass": "footer"
    }
  },

  "footer-layout.mobile": {
    "children": [
      "image#footer",
      "flex-layout.row#1-footer-mobile",
      "flex-layout.row#2-footer-mobile"
    ]
  },
  "flex-layout.row#2-footer-mobile": {
    "children": ["flex-layout.col#footer-1-mobile"],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4
    }
  },
  "flex-layout.col#footer-1-mobile": {
    "children": [
      "accepted-payment-methods",
      "social-networks",
      "rich-text#footer-mobile"
    ],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4,
      "rowGap": 4
    }
  },
  "flex-layout.row#1-footer-mobile": {
    "props": {
      "paddingTop": 4,
      "paddingBottom": 4
    },
    "children": ["vtex.menu@2.x:menu#footer-mobile"]
  },
  "rich-text#footer-mobile": {
    "props": {
      "text": "Todos los derechos reservados Real Plaza Go | Empowered by ",
      "blockClass": "footer"
    }
  }
}
