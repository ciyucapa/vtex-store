{
  "footer": {
    "blocks": [
      "footer-layout.desktop", 
      "footer-layout.mobile"
    ]
  },
  "footer-layout.desktop": {
    "children": [
      "image#footer",
      "flex-layout.row#footer-1-desktop",
      "flex-layout.row#footer-2-desktop",
      "flex-layout.row#footer-3-desktop"
    ]
  },
  "image#footer": {
    "props": {
      "src": "https://sugoco.vtexassets.com/arquivos/curva_footer.svg",
      "blockClass":"image-curva"
    }
  },
  "flex-layout.row#footer-1-desktop": {
    "children": ["flex-layout.col#footer-one"],
    "props": {
      "blockClass": "new"

    }
  },
  "flex-layout.col#footer-one": {
    "children":[
      "logo#logo-footer",
      "rich-text#text-logo"
    ],
    "props": {
      "marginLeft": 9
    }
  },
  "logo#logo-footer": {
    "props": {
      "title": "Logo",
      "href": "/",
      "url": "https://sugoco.vtexassets.com/assets/vtex/assets-builder/sugoco.sugoco-theme/4.0.3/globals/main-footer-logo___b10be364fdd8f3c9ab32da3cc6ca61f2.svg",
      "width": "110"
    }
  },
  "rich-text#text-logo": {
    "props":{
      "text":"La primera tienda sostenible donde ahorrando, \ntambién ayudas al planeta.",
      "blockClass": "text-logo"
    }
  },
  "flex-layout.row#footer-2-desktop": {
    "children": ["flex-layout.col#footer-5-desktop", "flex-layout.col#footer-6-desktop", "flex-layout.col#footer-7-desktop"],
    "props": {
      "blockClass": "new"
    }
  },
  "flex-layout.col#footer-5-desktop":{
    "children":["rich-text#somos"],
    "props": {
      "marginLeft": 9,
      "width":"17%"
    }
  },
  "flex-layout.col#footer-6-desktop":{
    "children":["vtex.menu@2.x:menu#footer-desktop"],
    "props": {
      "blockClass": "footer-two",
      "marginLeft": 7,
      "width":"54%"
    }
  },
  "flex-layout.col#footer-7-desktop":{
    "children":["image#industria"],
    "props": {
      "blockClass": "footer-three",
      "width":"31%"
    }
  },
  "rich-text#somos": {
    "props": {
      "text": "Somos transparentes",
      "blockClass": "text-footer-somos"
    }
  },
  "image#industria": {
    "props": {
      "src": "https://sugoco.vtexassets.com/arquivos/superintendencia.png",
      "blockClass": "industria-image"
    }
  },
  "flex-layout.row#footer-3-desktop": {
    "children": ["flex-layout.col#footer-3-one", "flex-layout.col#foter-3-two"],
    "props": {
      "blockClass": "desktop-3"
    }
  },
  "flex-layout.col#footer-3-one":{
    "children":["rich-text#pago", "flex-layout.row#images-pagoss", "rich-text#sugo-footer"],
    "props": {
      "marginLeft": 10,
      "width": "50%",
      "blockClass": "footer-pagos"
    }
  },
  "flex-layout.col#foter-3-two":{
    "children":["rich-text#excelencia", "flex-layout.row#aenor"],
    "props": {
      "blockClass": "excelencia",
      "horizontalAlign": "center",
      "width": "50%"
    }
  },
  "rich-text#pago":{
    "props":{
      "text":"Realiza tu pago de forma segura",
      "blockClass": "text-pago"
    }
  },
  "rich-text#sugo-footer":{
    "props":{
      "text":"Sugo Colombia SAS | NIT:901.396.973-9 | Dirección: Cra 13 # 90-17 Bogotá | E-mail de notificación judicial: legal@sugo.com",
      "blockClass": "sugo-footer"
    }
  },
  
  "flex-layout.row#images-pagoss":{
    "children":["image#visa", "image#mastercad", "image#american", "image#diner"],
    "props": {
      "blockClass": "pagos",
      "preventVerticalStrech": true
    }
  },
  "image#visa": {
    "props": {
      "src": "https://sugoco.vtexassets.com/assets/vtex/assets-builder/sugoco.sugoco-theme/4.0.3/globals/visa___ba3705d5ddd03e1f4758ba127e779b0e.svg",
      "blockClass": "visa-image"
    }
  },
  "image#mastercad": {
    "props": {
      "src": "https://sugoco.vtexassets.com/assets/vtex/assets-builder/sugoco.sugoco-theme/4.0.3/globals/master___466ee8a80a25a547e643b6925bc7599e.svg",
      "blockClass": "mastercard-image"
    }
  },
  "image#american": {
    "props": {
      "src": "https://sugoco.vtexassets.com/assets/vtex/assets-builder/sugoco.sugoco-theme/4.0.3/globals/american___a37a61c9f136c029b5d8d71cc6878fe0.svg",
      "blockClass": "american-image"
    }
  },
  "image#diner": {
    "props": {
      "src": "https://sugoco.vtexassets.com/assets/vtex/assets-builder/sugoco.sugoco-theme/4.0.3/globals/diners___1fdc888054f802c9ca8736abfaa8d38a.svg",
      "blockClass": "diner-image"
    }
  },
  
  "rich-text#excelencia":{
    "props":{
      "text":"Excelencia en todo lo que hacemos",
      "blockClass": "excelencia"
    }
  },
  "flex-layout.row#aenor": {
    "children":["image#aenor-one", "image#aenor-two", "image#aenor-three", "image#huella" ],
    "props": {
      "blockClass": "aenor"
    }
  },
  "image#aenor-one": {
    "props": {
      "src": "https://sugoco.vtexassets.com/arquivos/iso_1-v2.png",
      "blockClass": "aenor-image",
      "maxHeight": 60
    }
  },
  "image#aenor-two": {
    "props": {
      "src": "https://sugoco.vtexassets.com/arquivos/iso_2-v2.png",
      "blockClass": "aenor-image",
      "maxHeight": 60
    }
  },
  "image#aenor-three": {
    "props": {
      "src": "https://sugoco.vtexassets.com/arquivos/iso_3-v2.png",
      "blockClass": "aenor-image",
      "maxHeight": 60
    }
  },
  "image#huella": {
    "props": {
      "src": "https://sugoco.vtexassets.com/arquivos/iso_4-v2.png",
      "blockClass": "huella-image",
      "maxHeight": 95
    }
  },

  "footer-layout.mobile": {
    "children": [
      "image#footer",
      "flex-layout.row#1-footer-mobile",
      "flex-layout.row#2-footer-mobile"
    ]
  },
  "flex-layout.row#2-footer-mobile": {
    "children": ["flex-layout.col#footer-1-mobile"],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4
    }
  },
  "flex-layout.col#footer-1-mobile": {
    "children": [
      "accepted-payment-methods",
      "social-networks",
      "rich-text#footer-mobile"
    ],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4,
      "rowGap": 4
    }
  },
  "flex-layout.row#1-footer-mobile": {
    "props": {
      "paddingTop": 4,
      "paddingBottom": 4
    },
    "children": ["vtex.menu@2.x:menu#footer-mobile"]
  },
  "rich-text#footer-mobile": {
    "props": {
      "text": "Todos los derechos reservados Real Plaza Go | Empowered by ",
      "blockClass": "footer"
    }
  }
}
